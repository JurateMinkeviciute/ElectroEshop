@using ElectroEshop.Models
@model LoginViewModel
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutEshop.cshtml";
}

<!-- BREADCRUMB -->
<div id="breadcrumb" class="section">
    <!-- container -->
    <div class="container">
        <!-- row -->
        <div class="row">
            <div class="col-md-12">
                <h3 class="breadcrumb-header">Login</h3>
                <ul class="breadcrumb-tree">
                    <li><a href="@Url.Action("Index")">Home</a></li>
                    <li class="active">Login</li>
                </ul>
            </div>
        </div>
        <!-- /row -->
    </div>
    <!-- /container -->
</div>
<!-- /BREADCRUMB -->
<!-- SECTION -->
<div class="section">
    <!-- container -->
    <div class="container">
        <!-- row -->
        <div class="row">

            <div class="col-md-7 col-md-offset-2">
                @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    <!-- Log In Details -->
                    <div class="billing-details">
                        <div class="section-title-center">
                            <h3 style="text-align: center;" class="title">Sign In</h3>
                            <br>
                        </div>
                        <div class="form-group">
                            @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            @*<input class="input" type="email" name="email" placeholder="Email">*@
                            @Html.TextBoxFor(m => m.Email, new { placeholder = "Email", @class = "input maxInput" })
                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            @*<input class="input" type="password" name="password" placeholder="Enter Your Password">*@
                            @Html.PasswordFor(m => m.Password, new { placeholder = "Enter Your Password", @class = "input maxInput" })
                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <!-- /Log In Details -->
                    <div class="input-checkbox">
                        <input type="checkbox" id="RememberMe" name="RememberMe" value="true">
                        <label for="RememberMe" name="RememberMe">
                            <span></span>
                            Remember me?
                        </label>
                    </div>
                    @*@Html.CheckBoxFor(m => m.RememberMe)
            @Html.LabelFor(m => m.RememberMe, new { @class = "label-style " })*@
                    <br>
                    <button @*href="#"*@ type="submit" class="primary-btn order-submit btn-block">Login</button>
                    <br>

                    @* Enable this once you have account confirmation enabled for password reset functionality *@
                    <p>
                        @Html.ActionLink("Forgot your password?", "ForgotPassword")
                    </p>
                }
            </div>
        </div>
    </div>
</div>
